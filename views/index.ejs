<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/common.css" />
    <link rel="stylesheet" href="/styles/index.css" />
    <title>Home</title>
  </head>
  <body>
    <div class="main-container">
      <%- include(`partials/header.ejs`, {auth: auth, admin: admin})%>
      <div class="posts">
        <h2>Recent Posts</h2>
        <ul>
          <%posts.forEach(p=>{%>
          <li class="card">
            <div><%= p.title%></div>
            <div><%= p.message%></div>
          </li>
          <%})%>
        </ul>
      </div>
      <%- include(`partials/footer.ejs`)%>
    </div>
  </body>
</html>
